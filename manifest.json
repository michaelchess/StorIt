{
  "manifest_version": 2,

  "name": "StorIt",
  "description": "Instantly get academic journals related to the page you're on.",
  "version": "1.0",
  "background": {
    "scripts": ["scripts/vendor/jquery-1.12.0.min.js", "scripts/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "browser_action": {
    // "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "tabs", 
    "<all_urls>"
  ]
}